@model Library.ViewModels.LibraticaViewModel
@{
    ViewBag.Title = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Library.Models

<h2>Books</h2>

@using (Html.BeginForm())
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Genre</th>
                <th scope="col">Release Year</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        @foreach (var Books in Model.Books)
        {
    <tr>
        <th scope="row">@Books.book_name</th>
        <td>@Books.book_genre</td>
        <td>@Books.book_year</td>
        <td>@Books.book_description</td>
        <form method="post"><td><input type="submit" onclick="reply_click(this.name)" name="@Books.book_name" value="Add" /></td></form>
        <td>
        </td>
    </tr>
        }
    </table>
}





